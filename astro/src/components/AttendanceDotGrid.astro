---
/**
 * AttendanceDotGrid — calendar-style dot matrix showing attendance
 * at a glance, grouped by year. Each dot links to its session.
 */
import { slugify } from "../lib/slugify";

interface Props {
  attendance: {
    sessionId: string;
    date: string;
    sittingNo: number;
    present: boolean;
  }[];
  attendancePresent: number;
  attendanceTotal: number;
}

const { attendance, attendancePresent, attendanceTotal } = Astro.props;

const percent =
  attendanceTotal > 0
    ? Math.round((attendancePresent / attendanceTotal) * 100)
    : 0;

const percentColor =
  percent >= 80
    ? "#2d6a3f"
    : percent >= 50
      ? "#6b5b2e"
      : "#b91c1c";

// Chronological order, grouped by year
const chronological = [...attendance].reverse();
const byYear = new Map<number, typeof attendance>();
for (const record of chronological) {
  const year = new Date(record.date).getFullYear();
  if (!byYear.has(year)) byYear.set(year, []);
  byYear.get(year)!.push(record);
}
// Sort years descending for display (most recent year on top)
const years = [...byYear.entries()].sort((a, b) => b[0] - a[0]);

const formatDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleDateString("en-SG", {
    weekday: "short",
    day: "numeric",
    month: "short",
    year: "numeric",
  });
};
---

<section class="att-dotgrid" data-pagefind-ignore>
  <!-- Header -->
  <div class="att-dg-header">
    <span class="att-dg-label">Attendance Record</span>
    <div class="att-dg-header-right">
      <span class="att-dg-percent" style={`color: ${percentColor}`}>{percent}%</span>
      <span class="att-dg-fraction">{attendancePresent} / {attendanceTotal}</span>
    </div>
  </div>

  <!-- Dot grid by year -->
  <div class="att-dg-body">
    {years.map(([year, records]) => (
      <div class="att-dg-year-row">
        <span class="att-dg-year">{year}</span>
        <div class="att-dg-dots">
          {records.map((record) => (
            <a
              href={`/sessions/${slugify(record.date, record.sessionId)}`}
              class:list={[
                "att-dot",
                record.present ? "dot-present" : "dot-absent",
              ]}
              title={`${formatDate(record.date)} — ${record.present ? "Present" : "Absent"}`}
            >
              <span class="att-dot-tooltip">
                {formatDate(record.date)}
              </span>
            </a>
          ))}
        </div>
      </div>
    ))}
  </div>

  <!-- Legend -->
  <div class="att-dg-legend">
    <div class="att-dg-legend-items">
      <span class="att-dg-legend-item">
        <span class="att-dot-mini dot-present" />
        Present
      </span>
      <span class="att-dg-legend-item">
        <span class="att-dot-mini dot-absent" />
        Absent
      </span>
    </div>
    <span class="att-dg-legend-count">
      {attendancePresent} / {attendanceTotal} sessions
    </span>
  </div>

  <!-- Footer -->
  <div class="att-dg-footer">
    <p>
      Attendance records indicate physical presence in the chamber.
      A recorded session does not imply the member spoke or voted.
    </p>
  </div>
</section>

<style>
  /* ── Container ── */
  .att-dotgrid {
    border: 1px solid var(--border);
    background: var(--surface);
    padding: 1.75rem 2rem 1.5rem;
  }

  /* ── Header ── */
  .att-dg-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 1.25rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border);
  }

  .att-dg-label {
    font-family: "DM Sans", system-ui, sans-serif;
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--ink-muted);
  }

  .att-dg-header-right {
    display: flex;
    align-items: baseline;
    gap: 0.6rem;
  }

  .att-dg-percent {
    font-family: "Newsreader", Georgia, serif;
    font-size: 1.35rem;
    font-weight: 400;
    line-height: 1;
  }

  .att-dg-fraction {
    font-family: "DM Sans", system-ui, sans-serif;
    font-size: 0.65rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    color: var(--ink-muted);
  }

  /* ── Dot Grid Body ── */
  .att-dg-body {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.25rem 0;
  }

  .att-dg-year-row {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .att-dg-year {
    font-family: "DM Sans", system-ui, sans-serif;
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--ink-muted);
    flex-shrink: 0;
    min-width: 2.5rem;
  }

  .att-dg-dots {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    align-items: center;
  }

  /* ── Dots ── */
  .att-dot {
    position: relative;
    display: block;
    width: 10px;
    height: 10px;
    border-radius: 9999px;
    text-decoration: none;
    transition: transform 0.15s ease, box-shadow 0.15s ease;
    cursor: pointer;
  }

  .att-dot:hover {
    transform: scale(1.5);
    z-index: 2;
  }

  .dot-present {
    background: #2d6a3f;
  }

  .att-dot.dot-present:hover {
    box-shadow: 0 0 0 3px #e6f2eb;
  }

  .dot-absent {
    background: transparent;
    box-shadow: inset 0 0 0 1.5px var(--ink-muted);
  }

  .att-dot.dot-absent:hover {
    box-shadow: inset 0 0 0 1.5px var(--ink-muted), 0 0 0 3px var(--border);
  }

  /* ── Tooltip ── */
  .att-dot-tooltip {
    position: absolute;
    bottom: calc(100% + 6px);
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
    font-family: "DM Sans", system-ui, sans-serif;
    font-size: 0.6rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    color: var(--surface);
    background: var(--ink);
    padding: 0.25em 0.5em;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.15s ease;
    z-index: 10;
  }

  .att-dot:hover .att-dot-tooltip {
    opacity: 1;
  }

  /* ── Legend ── */
  .att-dg-legend {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid var(--border);
    padding-top: 1rem;
  }

  .att-dg-legend-items {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .att-dg-legend-item {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-family: "DM Sans", system-ui, sans-serif;
    font-size: 0.6rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--ink-muted);
  }

  .att-dot-mini {
    display: block;
    width: 7px;
    height: 7px;
    border-radius: 9999px;
    flex-shrink: 0;
  }

  .att-dot-mini.dot-present {
    background: #2d6a3f;
  }

  .att-dot-mini.dot-absent {
    background: transparent;
    box-shadow: inset 0 0 0 1.5px var(--ink-muted);
  }

  .att-dg-legend-count {
    font-family: "Source Serif 4", Georgia, serif;
    font-size: 0.72rem;
    font-style: italic;
    color: var(--ink-muted);
  }

  /* ── Footer ── */
  .att-dg-footer {
    border-top: 1px solid var(--border);
    margin-top: 1rem;
    padding-top: 1rem;
  }

  .att-dg-footer p {
    font-family: "Source Serif 4", Georgia, serif;
    font-size: 0.72rem;
    font-style: italic;
    color: var(--ink-muted);
    line-height: 1.6;
    margin: 0;
  }

  /* ── Responsive ── */
  @media (max-width: 480px) {
    .att-dotgrid {
      padding: 1.25rem 1.25rem 1rem;
    }

    .att-dg-year-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.4rem;
    }

    .att-dg-dots {
      gap: 5px;
    }

    .att-dot {
      width: 9px;
      height: 9px;
    }

    .att-dg-legend {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
