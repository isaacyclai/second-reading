---
interface Props {
  name: string;
  class?: string;
}

const { name, class: className = "" } = Astro.props;

// Get initials from name (first letter of first and last name)
const initials = name
  .split(" ")
  .filter((n) => n.length > 0)
  .map((n) => n[0])
  .slice(0, 2)
  .join("");

const gradientClass = "bg-gradient-to-br from-amber-100 to-amber-300";
---

<div
  class:list={[
    "w-11 h-11 rounded-full flex-shrink-0 flex items-center justify-center",
    "font-display text-sm text-white font-medium",
    gradientClass,
    className,
  ]}
>
  {initials}
</div>
