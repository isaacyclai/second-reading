---
import { marked } from "marked";

interface Props {
  title?: string;
  content: string | null | undefined;
  fallbackMessage?: string;
}

const {
  title = "AI Summary",
  content,
  fallbackMessage = "Summary has not been generated yet.",
} = Astro.props;

const parsedContent = content ? marked.parse(content) : "";
---

<div
  class="rounded-lg border border-amber-200/60 bg-gradient-to-br from-amber-50/50 to-orange-50/30 p-4"
>
  <div class="mb-2 flex items-center gap-2">
    <svg
      class="h-4 w-4 text-amber-600"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
      ></path>
    </svg>
    <h3
      class="font-ui text-sm font-semibold text-amber-800 tracking-wide uppercase"
    >
      {title}
    </h3>
  </div>
  {
    content ? (
      <div
        class="prose prose-sm prose-amber max-w-none font-body text-ink/70 leading-relaxed"
        set:html={parsedContent}
      />
    ) : (
      <p class="font-ui text-sm text-ink/40 italic">{fallbackMessage}</p>
    )
  }
</div>
